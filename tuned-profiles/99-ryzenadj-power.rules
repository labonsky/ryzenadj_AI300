# Switch to battery profile when unplugged
ACTION=="change", SUBSYSTEM=="power_supply", ATTR{type}=="Mains", ATTR{online}=="0", RUN+="/usr/sbin/tuned-adm profile ryzenadj-battery", RUN+="/usr/bin/ryzenadj --stapm-limit=3000 --fast-limit=5000 --slow-limit=3000"

# Switch to AC profile when plugged in
ACTION=="change", SUBSYSTEM=="power_supply", ATTR{type}=="Mains", ATTR{online}=="1", RUN+="/usr/sbin/tuned-adm profile ryzenadj-ac", RUN+="/usr/bin/ryzenadj --stapm-limit=53000 --fast-limit=53000 --slow-limit=35000"
